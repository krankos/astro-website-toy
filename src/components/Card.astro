---
export interface Props {
  dark?: boolean;
}

const { dark = false } = Astro.props as Props;
---

<div class={`card ${dark && "dark"}`}>
  <slot />
</div>

<style>
  .card {
    background: #fff;
    padding: 20px 50px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    margin-bottom: 20px;
    /* border: 2px solid rgb(215, 26, 26); */
  }
  .dark {
    background: var(--color-primary);
    color: #fff;
  }
</style>
